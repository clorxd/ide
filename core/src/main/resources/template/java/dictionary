package #{$package};

import java.util.List;
import java.util.ArrayList;

import com.teamide.bean.OptionBean;
import com.teamide.util.StringUtil;

/**
 * 数据字典
 * #{$comment}
 */
public class #{$classname} extends OptionBean {

	private static final List<#{$classname}> options = new ArrayList<#{$classname}>();

	static {
		#forStart($options, $one)#
		add("#{$one.value}", "#{$one.text}", "#{$one.parent}", "#{$one.image}", "#{$one.color}");
		#forEnd#
	}

	/**
	 * 添加字典项
	 */
	public static #{$classname} add(String value, String text, String parent, String image, String color) {
		#{$classname} option = new #{$classname}();
		option.setValue(value);
		option.setText(text);
		option.setParent(parent);
		option.setImage(image);
		option.setColor(color);
		
		options.add(option);
		return option;
	}

	/**
	 * 获取所有字典项
	 */
	public static List<#{$classname}> getOptions() {
		return options;
	}
	
	/**
	 * 查询字典项
	 */
	public static #{$classname} getOption(String value) {
		for(#{$classname} option : options) {
			if(StringUtil.isEmpty(value) && StringUtil.isEmpty(option.getValue())){
				return option;
			}
			if(null != value && value.equals(option.getValue()) {
				return option;
			}
		}
		return null;
	}
	
	/**
	 * 查询值对应的文案
	 */
	public static String getText(String value) {
		#{$classname} option = getOption(value);
		if(null != option){
			return option.getText();
		}
		return null;
	}

}