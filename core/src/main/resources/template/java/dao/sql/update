package #{$package};

import java.util.*;
import com.teamide.util.*;
import com.teamide.exception.*;

import com.alibaba.fastjson.*;

import #{$app_factory.$package}.#{$app_factory.$classname};

import com.teamide.db.bean.*;

import com.teamide.dao.IDao;
import com.teamide.param.DataParam;
import com.teamide.jexl.JexlTool;

#ifStart($usespringannotation == true)#
import org.springframework.stereotype.Service;
#ifEnd#

/**
 * SQL Dao 修改
 * #{$comment}
 */
@SuppressWarnings("unused")
#ifStart($usespringannotation == true)#
@Service
#ifEnd#
public class #{$classname} {
	
	/**
	 * 执行
	 */
	#ifStart($is_batch == true)#
	public List<Map<String, Object>> invoke(JSON json, JSONObject data) throws Exception {
	#ifEnd#
	#ifStart($is_batch == false)#
	public Map<String, Object> invoke(JSONObject data) throws Exception {
	#ifEnd#
		#ifStart($datarule != null)#
		JSONObject cache = (JSONObject)data.clone();
		if (json != null && !(json instanceof JSONArray)) {
			cache.putAll((JSONObject) JSON.toJSON(json));
		}
		json = (JSON) JSON.toJSON(JexlTool.invoke("#{$datarule}", cache));
		#ifEnd#
		#ifStart($database == null)#
		IDao dao = #{$app_factory.$classname}.getDao(data);
		#ifEnd#
		#ifStart($database != null)#
		IDao dao = #{$app_factory.$classname}.getDaoFor#{$database.name}(data);
		#ifEnd#
		
		#ifStart($is_batch == true)#
		SqlParamList sqlParamList = new SqlParamList();
		JSONArray list = new JSONArray();
		if(json != null) {
			if (json instanceof JSONArray) {
				list = (JSONArray) JSON.toJSON(json);
			} else {
				list.add(JSON.toJSON(json));
			}
		}
		for(int i = 0; i < list.size(); i++){
			JSONObject one = (JSONObject)data.clone();
			one.putAll(list.getJSONObject(i));
			one.put("$index", i);
			SqlParam sqlParam = buildSqlParam(one);
			sqlParamList.add(sqlParam);
		}
		int result = dao.batchExecute(sqlParamList);
		List<Map<String, Object>> params = new ArrayList<Map<String, Object>>();
		for (int i = 0; i < sqlParamList.size(); i++) {
			params.add(sqlParamList.get(i).getParam());
		}
		return params;
		#ifEnd#
		#ifStart($is_batch == false)#
		SqlParam sqlParam = buildSqlParam(data);
		int result = dao.execute(sqlParam);
		
		return sqlParam.getParam();
		#ifEnd#
	}
	
	/**
	 * 组合SQL
	 */
	public SqlParam buildSqlParam(JSONObject data) throws Exception {
		// 用于暂存字段取到的值
		Object value = null;
		// SQL执行用到的参数，SQL中使用“:key”作占位符
		Map<String, Object> param = new HashMap<String, Object>();
		
		// SQL语句
		StringBuffer sql = new StringBuffer();
		// SQL Set语句
		StringBuffer setSql = new StringBuffer();
		// SQL Where语句
		StringBuffer whereSql = new StringBuffer();
		
#{$content}
	
		// 去除结尾“,”
		if(setSql.toString().endsWith(",")){
			setSql.setLength(setSql.length() - 1);
		}
	
		// 拼接修改SQL语句
		sql.append(setSql).append(" ").append(whereSql);
		
		SqlParam sqlParam = new SqlParam(sql.toString(), param);
		return sqlParam;
	}
}