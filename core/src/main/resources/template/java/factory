package #{$package};

import com.teamide.dao.IDao;
import com.teamide.exception.DatabaseNotFoundException;
import com.teamide.factory.DatabaseFactory;
import com.teamide.service.IService;

/**
 * AppFactory
 * 应用工厂
 */
public class #{$classname} {

	static DatabaseFactory DATABASE_FACTORY = new DatabaseFactory("jdbc", "databases");

	public static IDao getDao() throws DatabaseNotFoundException {

		return DATABASE_FACTORY.newDao();
	}

	public static IService getService() throws DatabaseNotFoundException {

		return DATABASE_FACTORY.newService();
	}
	
}