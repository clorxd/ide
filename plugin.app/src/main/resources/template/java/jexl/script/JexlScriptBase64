package #{$package};

import com.teamide.util.EncryptUtil;
import com.teamide.util.StringUtil;

import org.springframework.stereotype.Component;

@Component
public class #{$classname} {

	public String encode(Object arg) {
		if (arg == null) {
			return null;
		}
		String value = StringUtil.str(arg);
		if (StringUtil.isEmpty(value)) {
			return value;
		}
		return EncryptUtil.Base64Encode(value);
	}

	public String decode(Object arg) {
		if (arg == null) {
			return null;
		}
		String value = StringUtil.str(arg);
		if (StringUtil.isEmpty(value)) {
			return value;
		}
		return EncryptUtil.Base64Decode(value);
	}

}
