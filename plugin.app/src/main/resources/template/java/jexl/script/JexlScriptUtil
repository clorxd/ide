package #{$package};

import com.teamide.util.StringUtil;

import org.springframework.stereotype.Component;

@Component
public class #{$classname} {

	public String replaceAll(Object arg, String arg1, String arg2) {
		if (arg == null) {
			return null;
		}
		String value = StringUtil.str(arg);
		if (StringUtil.isEmpty(value)) {
			return value;
		}
		if (arg1 == null || arg2 == null) {
			return value;
		}
		return value.replaceAll(arg1, arg2);

	}

	public String toStar(Object arg, int start, int end) {
		if (arg == null) {
			return null;
		}
		String value = StringUtil.str(arg);
		if (StringUtil.isEmpty(value)) {
			return value;
		}
		String[] ss = value.split("");
		String res = "";
		for (int i = 0; i < ss.length; i++) {
			if (i < start) {
				res += ss[i];
			} else if (i > end) {
				res += ss[i];
			} else {
				res += "*";
			}
		}
		return res;

	}

}
